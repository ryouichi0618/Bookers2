<%= render 'layouts/sidebar', book: @book, user: @user %>


<div>
  <h1>Books</h1>
  
  
  <h4>Title</h4>
  <h4>Opinion</h4>
  <% @books.each do |book| %>
  
   <%= link_to user_path(@user) do %>
    <p><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size: "90x90" %></p>
   <% end %>  
    <p><%= link_to book.title, book_path(book.id) %></p>
    <p><%= book.body %></p>
    
  
  <% end %>
</div>
