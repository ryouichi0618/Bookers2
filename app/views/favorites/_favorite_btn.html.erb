<% if book.favorited_by?(current_user) %>
    <%= link_to "♥#{book.favorites.count}", book_favorites_path(book), method: :delete, remote: true, class: "text-danger" %>
  <% else %>
  <p>
    <%= link_to "♡#{book.favorites.count}", book_favorites_path(book), method: :post, remote: true, class: "text-primary" %>
  </p>
<% end %>
