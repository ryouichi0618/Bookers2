<% if book.favorited_by?(current_user) %>
  <p>
    <%= link_to book_favorites_path(book), method: :delete do %><span class="text-danger">♥<%= book.favorites.count %></span><% end %>
  </p>
  <% else %>
  <p>
    <%= link_to book_favorites_path(book), method: :post do %> <span class="text-primary">♡<%= book.favorites.count %></span> <% end %>
  </p>
<% end %>