<% book.book_comments.each do |book_comment| %>
  <table>
    <tr>
      <td>
        <%= attachment_image_tag book_comment.user, :profile_image, size: "40x40", fallback: "no_image.jpg", size: "40x40" %><br>
        <%= link_to book_comment.user.name,user_path(book_comment.user_id)  %>
      </td>
      <td><%= book_comment.comment %></td>
      <td>
        <% if book_comment.user == current_user %>
          <%= link_to "Destroy", book_book_comment_path(book_comment.book,book_comment),method: :delete, remote: true ,data: {confirm: "本当に消しますか？"},class: "btn btn-danger btn-sm"  %>
        <% end %>
      </td>
    </tr>
  </table>
<% end %>