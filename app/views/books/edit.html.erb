<div class="container">
  <div class="row">
    <div class="col-5 mx-auto">
      
      <h1>Editing Book</h1>
      
      <%= render 'layouts/error_form', user: @book %>
      
      <%= form_with model: @book, local: true do |f| %>
        <div class="form-group">
          <label for="inputTitle">Title</label><br>
          <%= f.text_field :title, autofocus: true, id:"inputTitle", class: "form-control" %>
        </div>
        
        <div class="form-group">
          <label for="inputOpinion">Opinion</label><br>
          <%= f.text_area :body, autofocus: true, id:"inputOpinion", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update Book',class: "btn btn-success" %>
        </div>
      <% end %>
      
      <%= link_to "Show", book_path(@book) %>
      <span>|</span>
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>
