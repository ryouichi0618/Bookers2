<div class="col-md-3">
  <h2 class="mb-2">User info</h2>

    <%= attachment_image_tag user, :profile_image, size: "90x90", format: 'jpeg', fallback: "no_image.jpg", size: "90x90" %>
    <table class="table">
      <thead>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>introduction</td>
          <td><%= @user.introduction %></td>
        </tr>
        <tr>
          <td>follows</td>
          <td>
            <%= link_to @user.follower.count, following_user_path(@user) %>
          </td>
        </tr>
        <tr>
          <td>followers</td>
          <td>
            <%= link_to @user.followed.count, followed_user_path(@user) %>
          </td>
        </tr>
      </tbody>
    </table>

      <% unless @user == current_user %>
        <% if current_user.following?(@user) %>
          <%= link_to 'フォロー外す', unfollow_path(@user.id),class: "btn btn-primary btn-sm", method: :POST %>
        <% else %>
          <%= link_to 'フォローする',follow_path(@user.id),class: "btn btn-success btn-sm", method: :POST %>
        <% end %>
      <% else %>
        <%= link_to edit_user_path(@user),class: "row" do %>
          <i class=" col-md-12 pull-right btn btn-outline-secondary btn-block fas fa-user-cog"></i>
        <% end %>
      <% end %>


  <h2>New  book</h2>
  <%= form_with model: book, local: true do |f| %>
    <p>
      <label for="inputTitle">Title</label><br>
      <%= f.text_field :title, autofocus: true, id:"inputTitle", size: "30x1" %>
    </p>
    <p>
      <label for="inputBody">Opinion</label><br>
      <%= f.text_area :body, autofocus: true, id:"inputBody", size: "30x3" %>
    </p>
      <%= f.submit "Create Book",class: "col-md-12 pull-right btn btn-success" %>
  <% end %>
</div>


