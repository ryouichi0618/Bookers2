<div class="col-3">
  <h1 class="mb-2">User info</h1>

    <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg", size: "90x90" %>
    <table class="table">
      <thead>
        <tr>
          <th scope="cal">name</th>
          <th scope="cal"><%= user.name %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scopes="cal">introduction</th>
          <th scopes="cal"><%= @user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div class="row">
        <a class="btn btn-outline-secondary btn-block fas fa-user-cog" href="/users/:id/edit"></a>
    </div>
    
  



  <!--新規投稿機能-->
  <h1>New  book</h1>
  <%= form_with model: book, local: true do |f| %>
    <p>
      <label for="inputTitle">Title</label><br>
      <%= f.text_field :title, autofocus: true, id:"inputTitle", size: "30x1" %>
    </p>
    <p>
      <label for="inputBody">Opinion</label><br>
      <%= f.text_area :body, autofocus: true, id:"inputBody", size: "30x3" %>
    </p>
    <button type="button" class="btn btn-success">
      <%= f.submit "Create Book" %>
    </button>
  <% end %>
</div>
